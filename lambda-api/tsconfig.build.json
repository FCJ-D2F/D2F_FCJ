{
  "extends": "../Frontend/tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "../Frontend",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "../Frontend/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../Frontend/client",
    "../Frontend/shared"
  ]
}


